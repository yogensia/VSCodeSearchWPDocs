{
    "name": "searchwpdocs",
    "displayName": "Search WordPress Docs",
    "description": "Search selected text in the WordPress Codex/Code Reference sites.",
    "version": "1.1.0",
    "publisher": "yogensia",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "wordpress"
    ],
    "icon": "images/icon-128.png",
    "license": "MIT",
    "homepage": "https://github.com/yogensia/VSCodeSearchWPDocs",
    "repository": {
        "type": "git",
        "url": "https://github.com/yogensia/VSCodeSearchWPDocs"
    },
    "bugs": {
        "url": "https://github.com/yogensia/VSCodeSearchWPDocs/issues",
        "email": "yogensia@gmail.com"
    },
    "activationEvents": [
        "onCommand:extension.searchCodex",
        "onCommand:extension.searchQueryPosts"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Search WordPress Docs configuration",
            "properties": {
                "searchwpdocs.site": {
                    "type": "string",
                    "default": "https://google.com/search?btnI&q=url:developer.wordpress.org ",
                    "description": "Url where to search for the function. Examples: 'https://codex.wordpress.org/', 'https://queryposts.com/function/', 'https://google.com/search?btnI&q=url:developer.wordpress.org '."
                }
            }
        },
        "commands": [
            {
                "command": "extension.searchCodex",
                "title": "Search in WordPress Docs..."
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.searchCodex",
                    "when": "editorHasSelection && editorLangId == php",
                    "group": "4_search"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.searchCodex",
                "key": "ctrl+alt+f",
                "mac": "cmd+alt+f",
                "when": "editorHasSelection && editorLangId == php"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
